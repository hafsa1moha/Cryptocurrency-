<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_back3"
    tools:context=".Activitis.SittingsActivity">

    <TextView
        android:id="@+id/sittingstextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Sittings"
        android:textSize="55sp"
        android:textColor="@color/purple"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/SecrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="383dp"
                android:layout_margin="16sp"
                android:background="@drawable/top_background_main_activity">


                <ImageView
                    android:id="@+id/languageimageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/language" />

                <TextView
                    android:id="@+id/languagetextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Language"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/languageimageView"
                    app:layout_constraintStart_toEndOf="@+id/languageimageView"
                    app:layout_constraintTop_toTopOf="@+id/languageimageView" />

                <ImageView
                    android:id="@+id/accountimageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/languageimageView"
                    app:layout_constraintTop_toBottomOf="@+id/languageimageView"
                    app:srcCompat="@drawable/user2" />

                <TextView
                    android:id="@+id/accounttextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Account"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/accountimageView3"
                    app:layout_constraintStart_toEndOf="@+id/accountimageView3"
                    app:layout_constraintTop_toTopOf="@+id/accountimageView3" />

                <ImageView
                    android:id="@+id/aboutimageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/accountimageView3"
                    app:layout_constraintTop_toBottomOf="@+id/accountimageView3"
                    app:srcCompat="@drawable/about2" />

                <TextView
                    android:id="@+id/abouttextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="About"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/aboutimageView4"
                    app:layout_constraintStart_toEndOf="@+id/aboutimageView4"
                    app:layout_constraintTop_toTopOf="@+id/aboutimageView4" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
